<?xml version='1.0' encoding='utf-8'?>
<!-- Generated by consul-template -->

<tomcat-users>

	{{ range $key, $pairs := printf "%s/users/" ( env "TOMCAT_PREFIX" ) | tree | byKey }}
		<user username="{{ $key }}" {{ range $pair := $pairs }}{{.Key}}="{{.Value}}" {{ end }}/>
	{{ end }}

	{{ range $roles := printf "%s/roles" ( env "TOMCAT_PREFIX" ) | key | split "," }}
		<role rolename="{{ $roles }}" />
	{{ end }}

</tomcat-users>
